<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.face{		
			margin: 10px;
			
		}
		
		.TopVerticalpanel{
			padding: 10px;				

		}
	</ui:style>
	<g:HTMLPanel width="1680" height="1080" styleName="{style.face}">
		<g:VerticalPanel width="8" height="100%" styleName="verticalPanelBorderNull">
			<g:Cell width="100%">
				<g:TabLayoutPanel barHeight="2" barUnit="PC" width="100%" height="100%" >
				
				<g:tab>
					<g:header>Данные</g:header>
					<g:VerticalPanel width="100%" height="731px">
						<g:HorizontalPanel width="100%" height="40%">
							<g:VerticalPanel height="100%" width="288px">
								<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
									<g:ListBox width="214px" height="25px"/>
								</g:Cell>
							</g:VerticalPanel>
							<g:VerticalPanel height="100%" width="606px">
								<g:Cell verticalAlignment="ALIGN_MIDDLE">
									<g:Button width="147px" height="32px" text="Получить данные" ui:field="button"/>
								</g:Cell>
							</g:VerticalPanel>
						</g:HorizontalPanel>
						<g:HorizontalPanel width="100%" height="70%">
							<g:TextArea width="100%" height="600px"/>
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:tab>
				<g:tab>
					<g:header>Добавление сетевых Правил</g:header>
					<g:TextArea width="100%" height="100%" text="WowWWW" visibleLines="3"/>
				</g:tab>
				<g:tab>
					<g:header>Добавление баз 1С</g:header>
					<g:TextArea width="100%" height="100%" text="WowWWW" visibleLines="3"/>
				</g:tab>				
			</g:TabLayoutPanel>
			</g:Cell>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 